{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2021",
    "skipLibCheck": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": false,
    "outDir": "./dist",
    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "preserveConstEnums": true,
    "declaration": true,
    "removeComments": true,
    "sourceMap": true,
    "strictNullChecks": true,
  },
  "include": [
    "lib/**/*.ts",
    "test/**/*.ts",
    "scripts/**/*.js"
  ],
  "exclude": [
    "node_modules"
  ]
}